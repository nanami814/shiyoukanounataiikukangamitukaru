<div class='container'>
  <div class='row'>
    <h1>全ユーザー一覧</h1>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <%= user.name %> - <%= user.email %>
            <td><%= link_to '詳細', admin_user_path{user.id}, method: :delete, class: "btn btn-secondary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>