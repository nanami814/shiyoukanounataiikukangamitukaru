<!DOCTYPE html>
<html>
  <head>
    <title>Shiyoukanounataiikukangamitukaru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/d661069345.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">体育館探し</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <% if user_signed_in? %>  
              <li>
                <%= link_to new_post_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-basketball"></i>新規投稿
                <% end %>
              </li>
              <li>
                <%= link_to posts_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-volleyball"></i>体育館一覧
                <% end %>
              </li>
              <li>
                <%= link_to groups_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-futbol"></i>グループ一覧
                <% end %>
              </li>
              <li>
                <%= link_to mypage_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-table-tennis-paddle-ball"></i>マイページ
                <% end %>
              </li>
              <li>
                <%= link_to users_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-dumbbell"></i>ユーザー一覧
                <% end %>
              </li>
              <li>
                <%= link_to about_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-person-swimming"></i>サイトについて
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-person-running"></i>ログアウト
                <% end %>
              </li>
              <div class="form-inline my-2 my-lg-0">  
                <%= render 'public/searches/form' %>
              </div>
            <% else %>
              <li>
                <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-basketball"></i>新規登録
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-volleyball"></i>ログイン
                <% end %>
              </li>
              <li>
                <%= link_to about_path, class:"nav-link text-light" do %>
                  <i class="fa-solid fa-volleyball"></i>このアプリについて
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
  
    </main>
    <%= yield %>
  </body>
</html>
