<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2 class="text-center">グループ一覧</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>名前</th>
            <th>メンバー</th>
            <th>人数</th>
          </tr>
        </thead>
        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= link_to group.name, group, class: "group_#{group.id}" %></td>
              <td>
                <% group.group_users.each do |group_user| %>
                  <li style="list-style: none;"><%= group_user.user.name %></li>
                <% end %>
              </td>
              <td><%= group.group_users.count %></td>
              <% if group.is_owned_by?(current_user) %>
                <td><%= link_to '削除', edit_group_path(group), class: "group_#{group.id}" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table> 
    </div>
  </div>
</div> 