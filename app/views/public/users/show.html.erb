<div class="container">
  <div class="row justify-content-center">
    <h2 class="col-3 text-center">ユーザー詳細</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>プロフィール画像</th>
          <th>名前</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= @user.name %></td>
          <td>
          <% if @user == current_user.id %>
            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
          <% else %>
            <th colspan="3"></th>
          <% end %>
        </tr>  
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>体育館名</th>
          <th>体育館詳細</th>
          <th>都道府県</th>
          <th>住所</th>
          <th>投稿日</th>
          <th>コメント数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= post.prefectures %></td>
            <td><%= post.domicile %></td>
            <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= post.post_comments.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
