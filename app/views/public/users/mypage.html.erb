<div class="row justify-content-center">
  <h2 class="col-12">マイページ</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>プロフィール画像</th>
        <th>名前</th>
        <th>グループ作成</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag current_user.get_profile_image(100,100) %></td>
        <td><%= current_user.name %></td>
        <td>
          <%= link_to "作成する", new_group_path %> |
          <%= link_to "グループ一覧", groups_path %>
        </td>
      </tr>  
    </tbody>
  </table>
</div>

<%= link_to "プロフィール編集", edit_user_path(current_user), class: "btn btn-primary" %>


<div class="row justify-content-center">
  <h2 class="col-3 text-center">投稿一覧</h2>
  <table class='table'>
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>体育館名</th>
        <th>体育館詳細</th>
        <th>都道府県</th>
        <th>住所</th>
        <th>投稿日</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.name %></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.prefectures %></td>
          <td><%= post.domicile %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "詳細", post_path(post.id), class: "btn btn-secondary" %></td>
        </tr>  
      <% end %>
    </tbody>
  </table>
</div>